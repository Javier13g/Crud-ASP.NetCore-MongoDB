@model crudSimple.Models.SongViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Ssong</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AlbumId"/>
            <div class="form-group">
                <label asp-for="Song.NameSong" class="control-label"></label>
                <input asp-for="Song.NameSong" class="form-control"/>
                <span asp-validation-for="Song.NameSong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.Duration" class="control-label"></label>
                <input asp-for="Song.Duration" class="form-control"/>
                <span asp-validation-for="Song.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back To List</a>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}